<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="@string/st_linha"
            android:layout_toStartOf="@+id/main_line_more"
            android:layout_marginStart="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/item_nome"/>


<ImageButton
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toStartOf="@+id/main_line_delete"
    android:layout_centerVertical="true"
    android:id="@id/main_line_more"
    app:srcCompat="@drawable/ic_mode_edit_black_24dp"
    android:padding="16dp"
    android:contentDescription="@string/delete_view"
    android:background="?selectableItemBackground"/>

<ImageButton
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerVertical="true"
    android:id="@id/main_line_delete"
    app:srcCompat="@drawable/ic_delete_black_24dp"
    android:padding="16dp"
    android:contentDescription="@string/delete_view"
    android:background="?selectableItemBackground"
    android:layout_alignParentEnd="true"/>

</RelativeLayout>